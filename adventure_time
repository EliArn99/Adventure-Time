import random

class StoryNode:
    def __init__(self, text, choices=None):
        self.text = text
        self.choices = choices if choices else {}

    def display(self):
        print(self.text)

class AdventureGame:
    def __init__(self):
        self.story = self.create_story()
        self.inventory = []
        self.current_location = "start"

    def create_story(self):
        return {
            "start": StoryNode("\nYou find yourself in a dark forest. ğŸŒ²ğŸŒŒ\nTwo paths lie ahead: left or right.\n", {"left": "cabin", "right": "river"}),
            "cabin": StoryNode("\nYou approach a spooky cabin. ğŸšï¸\nDo you enter or leave?\n", {"enter": "inside_cabin", "leave": "start"}),
            "river": StoryNode("\nYou stand by a rushing river. ğŸŒŠ\nDo you swim across or follow the bank?\n", {"swim": "waterfall", "follow": "bridge"}),
            "inside_cabin": StoryNode("\nThe cabin is dark and eerie. ğŸ•¯ï¸\nYou find a locked chest and a mysterious key.\nDo you open the chest or leave?\n", {"open": "treasure", "leave": "start"}),
            "treasure": StoryNode("\nğŸ‰ You found a chest of gold and magical artifacts! ğŸ’°âœ¨\nYou win! ğŸ¯\n"),
            "waterfall": StoryNode("\nThe river's current is too strong! You are swept away... ğŸ’¦\nGame Over.\n"),
            "bridge": StoryNode("\nYou find a rickety bridge and cross it carefully. ğŸŒ‰\nOn the other side, a wise sage offers you a riddle:\n\n'What has roots as nobody sees,\nIs taller than trees,\nUp, up it goes,\nAnd yet never grows?'\n", {"mountain": "village", "tree": "waterfall"}),
            "village": StoryNode("\nThe sage nods and lets you pass. You enter a bustling village. ğŸ˜ï¸\nThe villagers cheer - you are their hero! ğŸ†\nYou win!\n"),
            "mysterious_cave": StoryNode("\nYou stumble upon a mysterious cave entrance. ğŸ•³ï¸\nDo you enter the cave or walk past it?\n", {"enter": "cave_inside", "walk past": "river"}),
            "cave_inside": StoryNode("\nThe cave is filled with glowing crystals and an ancient dragon. ğŸ‰\nThe dragon speaks: 'Answer my riddle to pass or be turned to stone.'\n\n'What comes once in a minute, twice in a moment, but never in a thousand years?'\n", {"m": "hidden_treasure", "time": "waterfall"}),
            "hidden_treasure": StoryNode("\nThe dragon smiles and reveals a hidden treasure of enchanted artifacts! ğŸª™âœ¨\nYou win! ğŸ¯\n")
        }

    def play(self):
        while True:
            location = self.story[self.current_location]
            location.display()

            if not location.choices:
                break

            choice = input(f"Choose one: {', '.join(location.choices.keys())}: ").strip().lower()

            if choice in location.choices:
                self.current_location = location.choices[choice]

                if self.current_location == "inside_cabin" and "key" not in self.inventory:
                    print("\nğŸ—ï¸ You found a key!")
                    self.inventory.append("key")

                if self.current_location == "treasure" and "key" not in self.inventory:
                    print("\nThe chest is locked! You need a key. ğŸ”’")
                    self.current_location = "inside_cabin"
            else:
                print("\nâŒ Invalid choice. Try again.")

if __name__ == "__main__":
    game = AdventureGame()
    game.play()
